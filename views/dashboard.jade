extends base

block vars
	- var title = 'Dashboard'

block content
	script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')
	<font color="white">
	h1 Dashboard

	h2 User Information
	p First Name: 	#{user.firstName}
	p Email: 		#{user.email}

	h2 Budget

	form(ng-submit="todoAdd()")
		input(type="text" ng-model="todoInput" size="50" placeholder='Budget')
		input(type="submit" value="Search")

	div(ng-repeat="x in lookup track by $index")
		input(type="checkbox" ng-model="x.done")
		span(ng-bind="x.country")

	button(ng-click="remove()") Remove

	script(src="/js/todo.js")


 



	

